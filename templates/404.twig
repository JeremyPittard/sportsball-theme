{% extends "base.twig" %}
{% block header %}{% endblock %}
{% block content %}


	<div class="flex min-h-screen bg-brand-primary">
		<div class="flex flex-col justify-center flex-1 px-8 py-8 md:px-12 lg:flex-none lg:px-24">
			<div class="w-full mx-auto lg:max-w-6xl">
				<div class="max-w-xl lg:p-10">
					<div>
						<p class="text-4xl text-brand-secondary">
							Error 404
						</p>
						<p class="max-w-xl mt-4 text-lg tracking-tight text-brand-primary-200">
							Please check the URL in the address bar and try again.
						</p>
					</div>
					<div class="flex gap-3 mt-10 w-full">
						<a class="sb-button bg-brand-secondary text-brand-primary" href="/">
							Go Home
						</a>
						<button class="text-brand-primary-200" onclick="goBack()">
							<span>
								Go Back
							</span>
							<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="flex-none w-3 h-3 ml-3 fill-blue-600 group-active:fill-current">
								<path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
							</svg>
						</button>
					</div>
				</div>
			</div>
		</div>
		<div class="relative flex-1 hidden w-0 lg:block max-w-full overflow-hidden">
			<img class="object-cover w-full h-full" src="{{theme.link}}/img/404.jpg" alt="An illustration of a cricket umpire singnalling 'out'.">
		</div>
	</div>
	<script>
		const goBack = () => {
history.back();
}
	</script>


{% endblock %}
