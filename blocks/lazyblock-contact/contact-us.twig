<section class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-20 max-w-7xl" x-data="{ show: false }">
	<div class="container px-6 py-12 mx-auto">
		<div class="duration-500 delay-100" :class="show || 'opacity-0'">
			<p class="font-medium text-brand-primary">{{contact.heading}}</p>
			<h1 class="mt-2 text-2xl font-semibold text-brand-primary md:text-3xl">{{contact.title}}</h1>
			<p class="mt-3 text-gray-500 ">{{contact.subtitle}}</p>
		</div>

		<div class="grid grid-cols-1 gap-12 mt-10 md:grid-cols-2 lg:grid-cols-3" x-intersect.margin.-150px="show = true">
			{% if contact['email-address'] %}
				<div class="duration-500" :class="show || 'opacity-0'">
					<span class="inline-block p-3 text-brand-400 rounded-full bg-blue-100/80 ">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
							<path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/>
						</svg>
					</span>

					<h2 class="mt-4 text-lg font-medium text-brand-primary ">Email</h2>
					<p class="mt-2 text-gray-500 ">
						{% if contact['email-caption'] %}
							{{contact['email-caption']}}
						{% endif %}
					</p>
					<a href="mailto:{{contact['email-address']}}" class="mt-2 text-brand-400 ">
						{{contact['email-address']}}
					</a>
				</div>
			{% endif %}
			{% if contact.address %}
				<div class="duration-500 delay-300" :class="show || 'opacity-0'">
					<span class="inline-block p-3 text-brand-400 rounded-full bg-blue-100/80 ">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
							<path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/>
							<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/>
						</svg>
					</span>
					<h2 class="mt-4 text-lg font-medium text-brand-primary ">Find us at</h2>
					<p class="mt-2 text-gray-500 ">
						{% if contact['address-caption'] %}
							{{contact['address-caption']}}
						{% endif %}
					</p>
					<a href="https://www.google.com/maps/search/{{contact.address}}" class="mt-2 text-brand-400 " target="_blank">{{contact.address}}</a>
				</div>
			{% endif %}
			{% if contact['phone-number'] %}
				<div class="duration-500 delay-700" :class="show || 'opacity-0'">
					<span class="inline-block p-3 text-brand-400 rounded-full bg-blue-100/80 ">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
							<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"/>
						</svg>
					</span>

					<h2 class="mt-4 text-lg font-medium text-brand-primary ">Phone</h2>
					<p class="mt-2 text-gray-500">
						{% if contact['phone-caption'] %}
							{{contact['phone-caption']}}
						{% endif %}
					</p>
					<a href="tel:{{contact['phone-number']}}" class="mt-2 text-brand-400">{{contact['phone-number']}}</p>
				</div>
			{% endif %}
		</div>
	</div>
</section>
