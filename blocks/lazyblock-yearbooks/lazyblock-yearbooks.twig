<section class="flex items-center w-full bg-white" x-data="{ show: false }">
	<div class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-20 max-w-7xl">
		<div class="flex flex-wrap justify-center gap-6 py-12" x-intersect.margin="show = true">
			{% for book in yearbooks %}

				<figure class="w-[45%] md:w-[16.5%] duration-500 delay-300" :class="show || 'opacity-0'">
					<img class="w-full bg-gray-200 aspect-square object-cover object-center " src="{{Image(book.image).src}}" alt="" width="1310" height="873">

					<h3 class="mt-5 text-lg font-medium leading-6 text-brand-primary">
						{{book.title ?? 'title'}}
					</h3>
					<p class="mt-3 text-base text-gray-500">
						{{book.description ?? ''}}
					</p>
					<div class="flex gap-3 mt-4 justify-left">
						{% if book.file_url %}
							<a class="sb-button inline-block mt-2" href="{{book.file_url}}" download>
								<span>
									download
								</span>
							</a>
						{% endif %}
						{% if book.file %}
							{% set file = TimberImage(book.file) %}

							<a class="sb-button inline-block mt-2" href="{{file.src()}}" download>
								<span>
									download
								</span>
							</a>
						{% endif %}
					</div>
				</figure>

			{% endfor %}
		</div>

	</div>
</section>
