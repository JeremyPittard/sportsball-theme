<section x-data="{ show: false }">
	<div class="flex flex-col justify-center flex-1 px-8 py-8 md:px-12 lg:flex-none lg:px-24">
		<div>
			<div class="relative overflow-hidden">
				<div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
					<div class="relative overflow-hidden shadow-xl">
						<div class="absolute inset-0 duration-500 delay-300" :class="show || 'opacity-0'">
							<img class="object-cover w-full h-full" src="{{breakout['background-image'].url}} ?? 'https://placehold.co/400'" alt="#">
							<div class="absolute inset-0 bg-gray-900/40"></div>
						</div>
						<div class="relative px-4 py-16 sm:px-6 sm:py-24 lg:py-32 lg:px-8">
							<div class="max-w-2xl p-10 mx-auto text-center duration-500 delay-700" :class="show || 'opacity-0'" x-intersect.margin="show = true">
								<div>
									{% if breakout.title %}
										<h2 class="text-3xl tracking-tight text-white">
											{{breakout.title}}
										</h2>
									{% endif %}
									{% if breakout.description %}
										<p class="max-w-xl mt-4 text-lg tracking-tight text-gray-200 ">
											{{breakout.description}}
										</p>
									{% endif %}
									{% if breakout.link %}
										<a href="{{breakout.link}}" class="sb-button inline-block mt-4">
											{% if breakout['link-label'] %}
												{{breakout['link-label']}}
											{% endif %}
										</a>
									{% endif %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
