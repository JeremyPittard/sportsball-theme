<section x-data="{ show: false }">
	<div class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-16 max-w-7xl">
		<div class="mx-auto">
			<div class="flex flex-wrap gap-0.5 md:grid-cols-6 duration-500 delay-300" :class="show || 'opacity-0'" x-intersect="show = true">
				{% for logo in logos.logos %}
					{% if logo.link %}
						<a href="{{logo.link}}" target="_blank" class="flex justify-center col-span-1 px-8 w-[45%] md:w-[16.5%]">
							<img class="max-h-12" src="{{logo.logo.url}}" alt="{{logo.alt}}">
						</a>
					{% else %}
						<div class="flex justify-center col-span-1 px-8 w-[45%] md:w-[16.5%]">
							<img class="max-h-12" src="{{logo.logo.url}}" alt="{{logo.logo.alt}}">
						</div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
</section>
